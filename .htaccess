Options -Indexes
RewriteEngine On
# Header append X-FRAME-OPTIONS "SAMEORIGIN"
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [NC,L]

